{
  "main": "/lib/index.js",
  "type": "module",
  "version": "0.0.1",
  "packageManager": "pnpm@9.6.0",
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "scripts": {
    "build": "pnpm run -C packages/cli build",
    "clean": "rm -rf dist",
    "gen": "bash ./scripts/gc.sh",
    "del": "bash ./scripts/del.sh",
    "preview": "pnpm -C play dev",
    "lint:prettier": "prettier --write --cache .",
    "lint:eslint": "npx eslint .",
    "lint:stylelint": "stylelint \"**/*.css\"",
    "commitlint": "commitlint --edit",
    "docs:dev": "vitepress dev docs --host",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@element-plus/icons-vue": "^2.3.1",
    "@radiant-ui/components": "workspace:^",
    "@radiant-ui/theme-chalk": "workspace:^",
    "@radiant-ui/utils": "workspace:^",
    "element-plus": "^2.8.6",
    "typescript": "^5.2.2",
    "vue": "^3.4.31"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.4.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@esbuild-kit/cjs-loader": "2.2.1",
    "@eslint/js": "^9.8.0",
    "@types/gulp-rename": "^2.0.6",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^22.1.0",
    "@vue/test-utils": "^2.4.6",
    "chalk": "^5.3.0",
    "commitlint-config-gitmoji": "^2.3.1",
    "eslint": "9.x",
    "eslint-plugin-vue": "^9.27.0",
    "globals": "^15.9.0",
    "gulp": "4.0.2",
    "gulp-rename": "^2.0.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "prettier": "3.3.3",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-scss": "^6.2.1",
    "stylelint-selector-bem-pattern": "^4.0.0",
    "typescript-eslint": "^8.0.0",
    "vitepress": "^1.3.1",
    "vitest": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.scss": [
      "stylelint --fix"
    ]
  }
}
