{
  "compilerOptions": {
    "module": "ESNext", //打包模块类型
    "declaration": false, //默认不要声明文件
    "noImplicitAny": false, //支持类型标注默认为any
    "removeComments": true, //删除注释
    "moduleResolution": "node", //node模块解析
    "esModuleInterop": true, //支持es6,commonjs模板
    "jsx": "preserve",
    "noLib": false, //不处理类库
    "target": "ES6", //目标版本ES6
    "sourceMap": true,
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true, //允许没有导出的模块中导入
    "experimentalDecorators": true, //修饰器语法
    "forceConsistentCasingInFileNames": true, //强制区分大小写
    "resolveJsonModule": true, //解析json模块
    "strict": true, //是否开启严格模式
    "skipLibCheck": true, //跳过类库检测
    "paths": { "@jg-ui/*": ["packages/*"] }
  },
  "exclude": ["node_modules", "**/_tests_", "dist/**"]
}
